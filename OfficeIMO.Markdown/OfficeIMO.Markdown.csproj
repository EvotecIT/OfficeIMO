<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>Fluent and object-model Markdown builder for .NET with CommonMark/GFM-style
            output. No external dependencies.</Description>
        <AssemblyName>OfficeIMO.Markdown</AssemblyName>
        <AssemblyTitle>OfficeIMO.Markdown</AssemblyTitle>
        <VersionPrefix>0.5.4</VersionPrefix>
        <TargetFrameworks>netstandard2.0;net8.0;net9.0</TargetFrameworks>
        <TargetFrameworks Condition=" '$([MSBuild]::IsOsPlatform(`Windows`))' ">
            $(TargetFrameworks);net472</TargetFrameworks>
        <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
        <Company>Evotec</Company>
        <Authors>Przemyslaw Klys</Authors>
        <PackageId>OfficeIMO.Markdown</PackageId>
        <PackageTags>markdown;gfm;builder;fluent;readme;docs;reporting</PackageTags>
        <PackageProjectUrl>https://github.com/EvotecIT/OfficeIMO</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/EvotecIT/OfficeIMO</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageIcon>OfficeIMO.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <DebugType>portable</DebugType>
        <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
        <IsPublishable>True</IsPublishable>
        <SignAssembly>False</SignAssembly>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
        <LangVersion>Latest</LangVersion>
        <Nullable>enable</Nullable>
        <EnableTrimmingPolyfills>true</EnableTrimmingPolyfills>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\Assets\OfficeIMO.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="README.md">
            <Pack>True</Pack>
            <PackagePath>README.md</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Using Include="System" />
        <Using Include="System.Text" />
        <Using Include="System.Collections.Generic" />
        <Using Include="System.Linq" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
        <Reference Include="System.Net.Http" />
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="OfficeIMO.Tests" />
        <InternalsVisibleTo Include="OfficeIMO.Examples" />
    </ItemGroup>

</Project>